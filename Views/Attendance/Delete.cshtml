@model Chacha_project.Models.Attendance
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Campus</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AttendenceId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Present)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Absent)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Leaves)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EnterTime)
        </dt>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="AttendenceId" />
        <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Are you sure to update')" /> |
        <a asp-action="Index" class="btn btn-danger">Back to List</a>
    </form>
</div>